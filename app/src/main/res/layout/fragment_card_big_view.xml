<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_card_big_view"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_image_big_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/a001" />

            <LinearLayout
                android:id="@+id/avatar_card_layout_big_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_avatar_image_big_card"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    tools:src="@drawable/a001" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_avatar_profile_data_small_FN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SomeText"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_avatar_profile_data_small_SN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SomeText"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_description_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SomeText"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>